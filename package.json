{
  "name": "yield-flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:e2e": "PLAYWRIGHT_WEB_SERVER=1 playwright test --project=e2e",
    "test:a11y": "PLAYWRIGHT_WEB_SERVER=1 playwright test --project=a11y",
    "test:percy": "npm run build && PLAYWRIGHT_WEB_SERVER=1 PLAYWRIGHT_WEB_SERVER_CMD=\"npm run start -- --hostname 127.0.0.1 --port 4173\" percy exec -- playwright test --project=e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-toggle-group": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.2",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@percy/cli": "^1.30.4",
    "@percy/playwright": "^1.0.7",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^2.1.9"
  }
}
